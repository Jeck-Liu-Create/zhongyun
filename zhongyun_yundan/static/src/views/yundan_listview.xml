<templates>
    <t t-name="Yundan.RfqNoContent" t-inherit="web.ActionHelper" t-inherit-mode="primary" owl="1">
        <xpath expr="//div[hasclass('o_view_nocontent')]" position="attributes">
            <attribute name="class" add="o_yundan_no_content" separator=" "/>
        </xpath>
    </t>

    <t t-name="Yundan.PurchaseListView" t-inherit="web.ListRenderer" t-inherit-mode="primary" owl="1">
        <xpath  expr="//t[@t-call='web.ActionHelper']" position="before">
            <div class="listRow_ch">
                <YundanDashBoard/>
            </div>
        </xpath>
        <xpath  expr="//table[@t-ref='table']" position="before">
            <t t-if="!env.isSmall">
                <div style="position: sticky !important;width: 100%; height:50px; top:0;z-index: 3; left:0">
                    <div class="row" style="margin-left:15px">
                        <div class="col col-md-3 col-sm-12"  style="border-top: 10px solid transparent;">
                            <DateRange
                                searchBus="this.envBus"
                            />
                        </div>
                        <div class="col col-md-2 col-sm-12"  style="border-top: 10px solid transparent;">
                            <button t-on-click="onClickClear" class="btn m-1">重置</button>
                            <button
                            t-on-click="onClickSearch"
                            class="btn btn-primary o_list_button_add"
                            type="button">搜索</button>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//th[@t-att-data-name='column.name']" position="attributes">
            <attribute name="style" add="top:50px !important" t-if="!env.isSmall"/>
        </xpath>
        <xpath expr="//table/thead/tr/t/th[2]" position="attributes">
            <attribute name="style" add="top:50px !important" t-if="!env.isSmall"/>
        </xpath>
        <xpath expr="//th[@t-if='displayOptionalFields or activeActions.onDelete']" position="attributes">
            <attribute name="style">width: 32px; min-width: 32px ;top:50px !important</attribute>
        </xpath>
        <xpath expr="//th[@t-if='displayOptionalFields or activeActions.onDelete']" position="attributes">
            <attribute name="class" add="listTh_controller" separator=" " t-if="!env.isSmall"/>
        </xpath>
        <xpath expr="//th[@t-if='hasSelectors']" position="attributes">
            <attribute name="style" add="top:50px !important" t-if="!env.isSmall"/>
        </xpath>
        <xpath expr="//th[@t-if='hasSelectors']" position="attributes">
            <attribute name="class" add="listTh_ch" separator=" " t-if="!env.isSmall"/>
        </xpath>
        <xpath expr="//thead" position="attributes">
            <attribute name="style" t-if="!env.isSmall">z-index: 2</attribute>
        </xpath>
        <xpath expr="//tfoot" position="attributes">
            <attribute name="style" t-if="!env.isSmall">z-index: 2</attribute>
        </xpath>
        <xpath expr="//table" position="attributes">
            <attribute name="class" add="o_list_table_layout" separator=" " t-if="!env.isSmall"/>
        </xpath>
    </t>

    <t t-name="Yundan.ListRenderer.RecordRow" t-inherit="web.ListRenderer.RecordRow" t-inherit-mode="primary" owl="1">
        <xpath expr="//td[@t-if='hasSelectors']" position="attributes">
            <attribute name="class" add="listRow_ch" separator=" " t-if="!env.isSmall"/>
        </xpath>

        <xpath expr="//tr/t/td" position="attributes">
            <attribute name="class" position="add" separator=" " t-if="!env.isSmall">listRow_controller</attribute>
        </xpath>
    </t>
</templates>

