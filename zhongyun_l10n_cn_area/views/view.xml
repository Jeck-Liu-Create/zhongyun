<?xml version="1.0"?>
<odoo>
    <record id="view_demo_datetime_tutorial_form" model="ir.ui.view">
        <field name="name">城市县/区信息</field>
        <field name="model">res.area</field>
        <field name="arch" type="xml">
        <form string="城市县/区信息">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="zipcode"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="city_id"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>

    <record id="view_demo_datetime_tutorial_tree" model="ir.ui.view">
        <field name="name">城市县/区信息列表</field>
        <field name="model">res.area</field>
        <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="zipcode"/>
            <field name="country_id"/>
            <field name="state_id"/>
            <field name="city_id"/>
        </tree>
        </field>
    </record>
</odoo>